# Environment Configuration for AQI Prediction System
# Copy this file to .env and fill in your values

# Application
APP_NAME=Real-Time AQI Prediction System
APP_VERSION=1.0.0
DEBUG=false

# Database (Railway PostgreSQL)
# Railway will provide this automatically
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/aqi_db

# External APIs
# Get your API key from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Optional: AQICN backup API
# Get token from: https://aqicn.org/data-platform/token/
AQICN_API_TOKEN=

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.railway.app

# Security (change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Scheduler Configuration
DATA_FETCH_INTERVAL_MINUTES=15
MODEL_RETRAIN_INTERVAL_HOURS=24

# Default Location (for initial setup)
DEFAULT_LATITUDE=28.6139
DEFAULT_LONGITUDE=77.2090
DEFAULT_CITY=Delhi
DEFAULT_COUNTRY=India
